<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.storage.client.ui.controller.LoginController" stylesheets="css/login.css">
    <TextField fx:id="loginField" onAction="#sendSignIn" prefWidth="250.0" promptText="login">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="passwordField" onAction="#sendSignIn" prefWidth="250.0" promptText="password">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </PasswordField>
    <Button fx:id="buttonSignIn" onAction="#sendSignIn" prefHeight="39.0" prefWidth="250.0" text="Sign In">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Button>
    <Button fx:id="buttonSignUp" onAction="#sendSignUp" prefHeight="39.0" prefWidth="250.0" text="Sign Up">
        <VBox.margin>
            <Insets bottom="40.0" />
        </VBox.margin>
    </Button>
    <Label fx:id="infoLabel" textFill="RED"/>
</VBox>
